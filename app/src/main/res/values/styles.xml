    <style name="NativeFullWidthCTA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/bg_radius_12</item>
        <item name="android:backgroundTint">@color/primaryTeal60</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">visible</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NativeSmallCTA">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_radius_12</item>
        <item name="android:backgroundTint">@color/primaryTeal60</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">visible</item>
        <item name="android:textStyle">bold</item>
    </style>

